{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "../lib",
        "emitDeclarationOnly": true,
        "removeComments": false,
        "rootDir": "../src"
    },
    "include": ["../src/**/*"],
    "exclude": [
        "../src/**/__mocks__/**/*",
        "../src/**/__tests__/**/*",
        "../src/**/*.spec.ts",
        "../src/**/*.test.ts",
        "../src/test.setup.ts"
    ]
}
