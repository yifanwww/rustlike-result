{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "module": "CommonJS",
        "outDir": "../lib-commonjs",
        "rootDir": "../src",
        "verbatimModuleSyntax": false
    },
    "include": ["../src/**/*"],
    "exclude": [
        "../src/**/__mocks__/**/*",
        "../src/**/__tests__/**/*",
        "../src/**/*.spec.ts",
        "../src/**/*.test.ts",
        "../src/test.setup.ts"
    ]
}
